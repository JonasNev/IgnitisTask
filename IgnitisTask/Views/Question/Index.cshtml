@model List<QuestionModel>

<h2 class="d-inline-block mb-4">Questions</h2>

@Html.ActionLink("Add an question", "Create", "Question", null, new { @class = "btn btn-primary float-right" })

@if (Model.Count == 0)
{
    <p>There are no questions</p> }
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="text-center">Text</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var question in Model)
            {
                <tr>
                    <td class="text-center">@question.Text</td>

                </tr>
            }
        </tbody>
    </table>}