@model List<AnswerModel>

<h2 class="d-inline-block mb-4">Answers</h2>

@Html.ActionLink("Add an answer", "Create", "Answer", null, new { @class = "btn btn-primary float-right" })

@if (Model.Count == 0)
{
    <p>There are no answers</p> }
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="text-center">Question</th>
                <th class="text-center">Answer</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var value in Model)
            {
                <tr>
                    <td class="text-center">@value.Question.Text</td>
                    <td class="text-center">@value.Text</td>

                </tr>
            }
        </tbody>
    </table>}